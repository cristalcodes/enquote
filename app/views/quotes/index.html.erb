<h1>Welcome to Your Quotes</h1>

<h3>Search Quotes</h3>

<%= form_tag quotes_path, :method => 'get' do %>  <p>   
    <%= text_field_tag :search, params[:search] %>   
    <%= submit_tag "Search", name: nil %> </p>
<% end %>

<h3>Your  Quotes</h3>
    <%@quotes.each do |quote|%>
         <%# <% binding.pry %> 
        <% if !quote.content.nil? %>
            <li><%= link_to quote.content, quote_path(quote) %></li>
        <% end%>
    <% end %>
    </ul>

<h3><%= link_to "Add a Quote", new_quote_path %></h3>

